.container
  .profile_header.comment_header
    = link_to root_path do
      %p.profile_back ‚Üê

  %div.mt30
    = render 'commons/card', user: @post.user

  %div
    = image_tag @post.picture, class: 'picture'
  .buttons#post-show{data: {post_id: @post.id}}
    = image_tag 'heart-active.svg', class: 'like-button hidden active-heart'
    = image_tag 'heart.svg', class: 'like-button hidden inactive-heart'
  .comments
    .comment-container

  %p.btn-primary.show-comment-form Comment
  .div.hidden.comment-form
    .comment-text-area
      = text_area_tag :comment_content, '', class: 'comment_form'
    %p.btn-primary.comment_addBtn Comment
    


