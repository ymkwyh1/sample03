<div class="container">
    <div class="profile_header">
        <%= link_to root_path  do %> 
            <p class="profile_back">‚Üê</p>
        <% end %>
        <%= link_to destroy_user_session_path, data: { method: 'delete', confirm: 'Log out?' }  do %> 
            <p class="profile_username"><%= current_user.username %></p>
        <% end %>
    </div>

    <div class="profile_content">
        <% if current_user.profile&.avatar&.attached? %>
            <%= image_tag current_user.profile.avatar, class: 'profile_avatar' %>
        <% else %>
            <%= image_tag 'ellipse.png' %>
        <% end %>
        <p class="profile_name"><%= @profile.name || current_user.username %></p>
        <p class="profile_introduction"><%= @profile&.introduction %></p>
        <%= link_to edit_profile_path do %>
            <p class="profile_edit">Edit</p>
        <% end %>
        <div class="profile_detail">
            <div class="block">
                <h4><%= @posts.count %></h4>
                <p>Posts</p>
            </div>
            <div class="block">
                <h4>0</h4>
                <p>Followers</p>
            </div>
            <div class="block">
                <h4>0</h4>
                <p>Following</p>
            </div>
        </div>
    </div>

    <div class="profile_pictures">
        <% @posts.each do |post| %>
            <%= link_to user_timeline_path(user_id: post.user.id) do %>
                <%= image_tag post.picture, class: 'profile_picture' %>
            <% end %>
        <% end %>
    </div>


</div>

