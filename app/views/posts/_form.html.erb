<div class="container">
    <%= form_with(model: @post, local: true) do |f| %>

        <div class="post_newHeader">
            <%= link_to root_path do %>
                <p class="back">‚Üê</p>
            <% end %>
            <%= f.submit 'Post', class: 'post_newSubmit' %>
        </div>

        <%= render 'commons/card', user: current_user %>

        <%= f.text_field :content, placeholder: "What's on our mind?", class: "post_newInput" %>

        <%= f.file_field :picture %>

    <% end %>
</div>