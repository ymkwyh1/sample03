<%= image_tag 'rectangle.png' %>
<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :account %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'text' %>
    </div>
    
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'text'  %>
    </div>

    <div class="field">
      <%= f.label :password %><br/>
      <%= f.password_field :password, autocomplete: "new-password", class: 'text'  %>
    </div>

    <div class="actions">
      <%= f.submit "CREATE ACCOUNT", class: 'btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
